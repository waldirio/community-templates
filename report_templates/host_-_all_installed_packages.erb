<%#
name: Host - All Installed Packages
snippet: false
template_inputs:
- name: hosts
  required: false
  input_type: user
  advanced: false
  value_type: search
  resource_type: Katello::ActivationKey
  hidden_value: false
model: ReportTemplate
-%>
<%-  load_hosts(search: input('hosts'), preload: [:installed_packages]).each_record do |host| -%>
<%-    host.installed_packages.each do |pkg| -%>
<%-   report_row(
        'Host': host.name,
        'Package Name': pkg.name,
        'Package NVRA': pkg.nvra,
        'Package NVREA': pkg.nvrea
      )-%>
<%-    end -%>
<%-  end -%>
<%= report_render -%>
